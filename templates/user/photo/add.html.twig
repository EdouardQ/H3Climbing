{% extends 'base.html.twig' %}

{% block title %}Add Photo{% endblock %}

{% block body %}
    <div class="form">
        {{ form_start(form, {attr: {class: "row row-cols-lg-auto g-3 align-items-center", novalidate: 'novalidate'}}) }}

        {{ form_label(form.filename) }}
        {{ form_widget(form.filename, {attr: {class: "form-control"}}) }}
        {{ form_errors(form.filename) }}

        <input type="submit" class="btn btn-primary btn-submit" />

        {{ form_end(form) }}
    </div>
{% endblock %}