{% extends 'base.html.twig' %}

{% block title %}Discovery Days{% endblock %}

{% block body %}
    <div>
        <div>
            <h4 class="table-title">Upcoming Discovery Days</h4>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Organizer</th>
                    <th>Location</th>
                    <th>Participants</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for discoveryDay in upcomingDiscoveryDays %}
                    <tr>
                        <td>{{ discoveryDay.title }}</td>
                        <td>{{ discoveryDay.date|date('Y-m-d') }}</td>
                        <td>{{ discoveryDay.organizer.fullName }}</td>
                        <td>{{ discoveryDay.location }}</td>
                        <td>{{ discoveryDay.registredUsers|length }}/{{ discoveryDay.maxParticipant }}</td>
                        <td>
                            <a href="{{ url('discovery_day.show', {id: discoveryDay.id}) }}">Details</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <br>
        <div>
            <h4 class="table-title">Past Discovery Days</h4>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Organizer</th>
                    <th>Location</th>
                    <th>Participants</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for discoveryDay in pastDiscoveryDays %}
                    <tr>
                        <td>{{ discoveryDay.title }}</td>
                        <td>{{ discoveryDay.date|date('Y-m-d') }}</td>
                        <td>{{ discoveryDay.organizer.fullName }}</td>
                        <td>{{ discoveryDay.location }}</td>
                        <td>{{ discoveryDay.registredUsers|length }}/{{ discoveryDay.maxParticipant }}</td>
                        <td>
                            <a href="{{ url('discovery_day.show', {id: discoveryDay.id}) }}">Details</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
